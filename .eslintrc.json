{
  "root": true,
  "extends": ["./node_modules/sanctuary-style/eslint-es3.json"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 3
  },
  "overrides": [
    {
      "files": ["*.md"],
      "plugins": ["markdown"],
      "env": {"es6": true},
      "globals": {
        "Z": true,
        "StateMaybe": true,
        "State": true,
        "StateT": true,
        "Maybe": true,
        "put": true,
        "modify": true,
        "evalState": true,
        "execState": true,
        "get": true,
        "run": true
      }
    }
  ]
}
